<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:gravity="center"
    android:background="@drawable/selector_item_bg" >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_good_pre"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@mipmap/pic_load_fail"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView

            android:id="@+id/txt_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="猕猴桃"/>

        <TextView
            android:id="@+id/txt_good_product_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湛江"/>

        <TextView
            android:id="@+id/txt_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="12/元斤"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_add_into_cart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_btn_add_into_cart"/>

</LinearLayout>