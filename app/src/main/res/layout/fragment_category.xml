<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mebee.mall.fragment.CategoryFragment">

    <com.mebee.mall.widget.MyToolbar
        android:id="@+id/toolbar_category"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="50dp"
        app:rightButtonIcon="@drawable/selector_search_icon"
        app:title="百联优果" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_category"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryDark"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="@color/white"
        app:tabIndicatorHeight="0dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_categorylist"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_wares_caregory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>