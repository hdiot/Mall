<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_mine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mebee.mall.activity.MineActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_mine"
        style="@style/toolbar"
        app:navigationIcon="@drawable/selector_back_icon"
        app:titleTextColor="@color/white"
        app:title="果仁"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="#00b850"
            android:gravity="center">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_head_mine"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@mipmap/head"
                app:placeholderImageScaleType="centerCrop"
                app:progressBarImage="@mipmap/pic_loading"
                app:progressBarAutoRotateInterval="1000"
                app:failureImage="@mipmap/pic_load_fail"
                app:roundAsCircle="true"/>

            <TextView
                android:id="@+id/txt_headname_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="点击头像登录"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名："/>
        <TextView
            android:id="@+id/txt_name_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxxxx"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户ID："/>
        <TextView
            android:id="@+id/txt_id_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxxxx"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_pwd_manage_mine"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="15dp"
        android:drawableRight="@drawable/selector_next_icon"
        android:text="密码管理"/>
    <TextView
        android:id="@+id/txt_address_manage_mine"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="15dp"
        android:drawableRight="@drawable/selector_next_icon"
        android:text="地址管理"/>

    <TextView
        android:id="@+id/txt_about_mine"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="15dp"
        android:drawableRight="@drawable/selector_next_icon"
        android:text="关于软件"/>

    <TextView
        android:id="@+id/txt_logout_mine"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:padding="15dp"
        android:text="退出登录"/>

</LinearLayout>
