<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ware_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:clickable="true"
    tools:context="com.mebee.mall.activity.WareDetailActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_ware_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00b850"
        app:navigationIcon="@drawable/ic_navigate_before_black_24dp"
        app:titleMarginStart="85dp"
        app:title="商品详情">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider_ware_detail"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_ware_name"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:text="-商品名称-"
                    android:textColor="#000"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/txt_ware_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="80 元/斤"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt_reduce_ware"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/selector_btn_add_into_cart" />

                    <EditText
                        android:id="@+id/et_volume_ware"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittext_shap"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLines="1"
                        android:hint="0" />

                    <Button
                        android:id="@+id/bt_add_ware"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/selector_btn_add_into_cart" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:background="@color/white" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="送至"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_gps_fixed_black_24dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="湛江市广东海洋大学"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
