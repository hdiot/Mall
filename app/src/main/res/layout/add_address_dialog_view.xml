<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext_shap"
    android:padding="10dp"
    android:gravity="center" >

    <EditText
        android:id="@+id/et_name_addr_dialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:background="@drawable/edittext_shap"
        android:hint="收件人"/>

    <EditText
        android:id="@+id/et_tel_addr_dialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:background="@drawable/edittext_shap"
        android:inputType="phone"
        android:hint="联系电话"/>
    <EditText
        android:id="@+id/et_address_addr_dialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:background="@drawable/edittext_shap"
        android:hint="送货地址"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancle_addr_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_button_green"
            android:text="取消"/>
        <Button
            android:id="@+id/btn_sure_addr_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_button_green"
            android:text="确认"/>

    </LinearLayout>

</LinearLayout>