<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_reset_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mebee.mall.activity.ResetPwdActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_reset_pwd"
        style="@style/toolbar"
        app:navigationIcon="@drawable/selector_back_icon"
        app:titleTextColor="@color/white"
        app:title="修改密码">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edittext_shap"
        android:layout_margin="15dp"
        android:padding="16dp">
        <com.mebee.mall.widget.ClearEditText
            android:id="@+id/et_id_reset_pwd"
            style="@style/editText_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:drawableLeft="@drawable/icon_account"
            android:drawablePadding="20dp"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:textColorHint="#00b850"
            android:hint="请输入账号"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="0.5dp"/>

        <com.mebee.mall.widget.ClearEditText
            android:id="@+id/et_pwd_reset_pwd"
            style="@style/editText_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="20dp"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textColorHint="#00b850"
            android:hint="请输入密码"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="0.5dp"/>

        <com.mebee.mall.widget.ClearEditText
            android:id="@+id/et_pwd2_reset_pwd"
            style="@style/editText_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="20dp"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textColorHint="#00b850"
            android:hint="请输入密码"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_reset_pwd"
        android:background="@drawable/selector_button_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="确认"/>

</LinearLayout>
